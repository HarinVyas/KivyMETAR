# VERSION 1.2.0 BbyBatak
WeatherRoot:
<WeatherRoot>:
    id: screen_manager
    RegisterPage:
    LoginPage:
        id: login_page
        name: "LoginPage"
        manager: screen_manager
    AddLocationForm:
        id: add_location_form
        manager: screen_manager
        usr_details: login_page.usr_info
    ICAOFinder:
<LoginPage>:
    name: "LoginPage"
    username_input: username
    password_input: password
    validation: confo
    BoxLayout:
        orientation: "vertical"
        padding: [100, 50, 100, 50]
        spacing: 30
        center_x: True

        Label:
            text: "Username"
            font_size: 28
        TextInput:
            id: username
            font_size: 30
        Label:
            text: "Password"
            font_size: 28
        TextInput:
            id: password
            password: True
            multiline: False
            font_size: 30
            color: 1, 0.9, 0.8, 1
        AnchorLayout:
            Button:
                text: "Go"
                font_size: 30
                size_hint_x: 0.5
                halign: 'center'
                color: 1, 0.9, 0.8, 1
                on_release:
                    root.validate()
        BoxLayout:
            Button:
                text: "Register"
                size_hint_x: 0.5
                font_size: 28
                color: 1, 0.9, 0.8, 1
                on_release:
                    app.root.current = "Register"
                    root.manager.transition.direction = "right"
            Button:
                text: "Forgot Password"
                size_hint_x: 0.5
                font_size: 28
                color: 1, 0.9, 0.8, 1
        Label:
            id: confo
            text: ""
            font_size: 25

<RegisterPage>:
    name: "Register"
    username_input: username
    password_input: password
    email_input: email
    validation: confo
    BoxLayout:
        orientation: "vertical"
        padding: [100, 50, 100, 50]
        spacing: 30
        center_x: True

        Label:
            text: "Username"
            font_size: 25
        TextInput:
            id: username
            font_size: 25
            size_hint_y: 1.75
        Label:
            text: "Password"
            font_size: 25
        TextInput:
            id: password
            password: True
            multiline: False
            font_size: 25
            size_hint_y: 1.75
        Label:
            text: "Email"
            font_size: 25
        TextInput:
            id: email
            font_size: 25
            size_hint_y: 1.75
        AnchorLayout:
            Button:
                text: "Go"
                font_size: 25
                size_hint_x: 0.6
                size_hint_y: 1.5
                halign: 'center'
                color: 1, 0.9, 0.8, 1
                on_release:
                    root.register_validation()
        AnchorLayout:
            Button:
                text: "Already got an account?"
                size_hint_x: 0.6
                size_hint_y: 1.5
                color: 1, 0.9, 0.8, 1
                halign: 'center'
                font_size: 28
                on_release:
                    app.root.current = "LoginPage"
                    root.manager.transition.direction = "left"
        Label:
            id: confo
            text: ""
            font_size: 25

#:import Factory kivy.factory.Factory
<MyPopup@Popup>:
    auto_dismiss: False
    title: "Settings"
    BoxLayout:
        orientation: "vertical"
        spacing: 20
        canvas.before:
            Color:
                rgba: (0.29, 0, 0.50, 0.5)
            Rectangle:
                pos: self.pos
                size: self.size
        ToggleButton:
            font_size: 30
            text: "Dark Mode"
            group: "Themes"
            color: 1, 0.9, 0.8, 1
            on_release: Factory.AddLocationForm.change_theme('d')
        ToggleButton:
            font_size: 30
            text: "Light Mode"
            group: "Themes"
            color: 1, 0.9, 0.8, 1
            on_release: Factory.AddLocationForm.change_theme('l')
        Button:
            font_size: 30
            text: 'Close settings'
            color: 1, 0.9, 0.8, 1
            on_release: root.dismiss()

<AddLocationForm>:
    name: "AddLocation"
    search_input: search_box
    recent_search_one: rsone
    recent_search_two: rstwo
    recent_search_three: rsthree

    airport_info: airport
    raw: raw_METAR
    time: time
    temp: temp
    dew: dew
    wind: wind
    alt: alt
    cloud: cloud
    other: other
    runway_data: runway_data
    airport: airport

    map: map
    orientation: "vertical"
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Label:
            text: "Enter ICAO Code"
            size_hint_x: 70
        Button:
            size_hint_x: 30
            text: 'Settings'
            color: 1, 0.9, 0.8, 1
            on_release: Factory.MyPopup().open()

    BoxLayout:
        height: "40dp"
        size_hint_y: None
        TextInput:
            id: search_box
            size_hint_x: 40
            hint_text: "ICAO"
            text: ""
        Button:
            text: "Search"
            size_hint_x: 15
            color: 1, 0.9, 0.8, 1
            on_press:
                root.search_location()
        Button:
            text: "Recent Searches"
            size_hint_x: 20
            color: 1, 0.9, 0.8, 1
            on_parent: dropdown.dismiss()
            on_release:
                root.fill()
                dropdown.open(self)
        DropDown:
            id: dropdown
            on_select: btn.text = '{}'.format(args[1])

            Button:
                id: rsone
                text: "First Item"
                size_hint_y: None
                color: 1, 0.9, 0.8, 1
                height: 35
                on_release: search_box.text = self.text

            Button:
                id: rstwo
                text: 'Second Item'
                size_hint_y: None
                color: 1, 0.9, 0.8, 1
                height: 35
                on_release: search_box.text = self.text

            Button:
                id: rsthree
                text: 'Third Item'
                size_hint_y: None
                color: 1, 0.9, 0.8, 1
                height: 35
                on_release: search_box.text = self.text
        Button:
            text: "Forgot your ICAO?"
            size_hint_x: 25
            color: 1, 0.9, 0.8, 1
            on_release:
                app.root.current = "ICAO"
                root.manager.transition.direction = "left"


    BoxLayout:
        canvas.before:
            Color:
                rgba: (0.29, 0, 0.50, 0.5)
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: "vertical"

        BoxLayout:
            orientation: "vertical"
            Label:
                id: airport
                text: "Airport Name"
                color: 1, 0.9, 0.8, 1
                height: "20dp"
                size_hint_y: None
            BoxLayout:
                height: "100dp"
                orientation: "horizontal"
                Map:
                    id: map
                    zoom: 12
                    lat: 40.63980103
                    lon: -73.77890015
                BoxLayout:
                    orientation: "vertical"
                    Label:
                        id: raw_METAR
                        text: "Raw METAR"
                        color: 1, 0.9, 0.8, 1
                        #color: 0.9, 0.26, 0, 1
                    Label:
                        id: time
                        text: "METAR at Time"
                        color: 1, 0.9, 0.8, 1
                    BoxLayout:
                        orientation: "horizontal"
                        Label:
                            id: temp
                            text: "1"
                            color: 1, 0.9, 0.8, 1
                        Label:
                            id: dew
                            text: "2"
                            color: 1, 0.9, 0.8, 1
                    BoxLayout:
                        orientation: "horizontal"
                        Label:
                            id: wind
                            text: "1"
                            color: 1, 0.9, 0.8, 1
                        Label:
                            id: alt
                            text: "2"
                            color: 1, 0.9, 0.8, 1
                    BoxLayout:
                        orientation: "horizontal"
                        Label:
                            id: cloud
                            text: "1"
                            color: 1, 0.9, 0.8, 1
                        Label:
                            id: other
                            text: "2"
                            color: 1, 0.9, 0.8, 1
            BoxLayout:
                height: "100dp"
                orientation: "vertical"
                Label:
                    text: "Runway Data"
                    color: 1, 0.9, 0.8, 1
                ListView:
                    id: runway_data
                    item_strings: []
                    color: 1, 0.9, 0.8, 1
                    selected_color: 1,1,1,1


<ICAOFinder>:
    name: "ICAO"
    search_input: search_box
    search_results: search_results_list_ICAO
    orientation: "vertical"
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Label:
            text: "Enter Name of airport"
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        TextInput:
            id: search_box
            size_hint_x: 40
        Button:
            text: "Search"
            size_hint_x: 10
            color: 1, 0.9, 0.8, 1
            on_press: root.findICAO()
        Button:
            size_hint_x: 10
            text: "Clear"
            color: 1, 0.9, 0.8, 1
            on_release: search_results_list_ICAO.item_strings = []
        Button:
            text: "Back"
            size_hint_x: 10
            color: 1, 0.9, 0.8, 1
            on_release:
                app.root.current = "AddLocation"
                root.manager.transition.direction = "right"
    ListView:
        canvas.before:
            Color:
                rgba: (0.29, 0, 0.50, 0.5)
            Rectangle:
                pos: self.pos
                size: self.size
        id: search_results_list_ICAO
        item_strings: []
